@import "./address.skeleton.wxss";
.address{
  width: 100%;
  height: 100%;
}

.address-info-box{
  height: 260rpx;
  background-color: deepskyblue;
}

.address-box{
  width: 100%;
  height:100%;
  background-color: whitesmoke;
  padding: 20rpx;
}
.address-small-box{
  width: calc(100% - 80rpx);
  height:100%;
  background-color: white;
  border-top-right-radius: 22rpx;
  border-top-left-radius: 22rpx;
  transform: translateY(-80rpx);
  padding: 20rpx;
}
.address-item{
  display: flex;
  justify-content: space-between;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-bottom:2rpx dashed #ccc ;
}
.address-info{
  width: 92%;
  /* background-color: turquoise; */
  display: flex;
  flex-flow: column;
}
.address-edit{
  width: 8%;
  /* background-color: wheat; */
  position: relative;
}
.address-info-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;

}
.name{
  font-family: '宋体';
  font-weight: bold;

}
.phone{
  margin:0 20rpx;
  font-size: 26rpx;
}

.default-icon{
  background-color: deepskyblue;
  border-radius:36rpx ;
  width: auto;
  padding:4rpx 10rpx;
  height: 10rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 10rpx;
  color: white;
}
.all-address-info{
  width: 100%;
  font-size: 26rpx;
}
.edit-icon{
  width: 100%;
  height:50rpx;
  position: absolute;
  top:26%;
}
.address-btn{
  width: 100%;
  height: 70rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  padding:10rpx 20rpx;
}
.address-submit{
  height:70rpx ;
  width: calc(100% - 40rpx);
  background-color:deepskyblue;
  border-radius: 36rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
}
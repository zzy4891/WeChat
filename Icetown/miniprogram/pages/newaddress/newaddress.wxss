@import "./newaddress.skeleton.wxss";
.newaddress{
  padding: 20rpx;
  background-color: whitesmoke;
  font-family: '宋体';
}
.newaddress-info{
  width: 100%;
  border-top-right-radius: 16rpx;
}
.receive{
  font-size: 28rpx;
  color: #444;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.ipt{
  width: calc(100% - 140rpx);
  height: 60rpx;
  margin-left: 20rpx;
}
.ipt input{
  height: 60rpx;
  padding:0 30rpx;
  font-size: 26rpx;
  color: #666;
}
.info-item{
  height: 60rpx;
  background-color: #fff;
  padding: 20rpx;
}

.picker-box{
  height: 60rpx;
  line-height: 60rpx;
  padding:0 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
}
.default-address{
  margin-top:20rpx;
  padding: 20rpx;
  background-color: #fff;
}
.default-title{
  font-size: 28rpx;
  color: #444;
  width: 180rpx;
  height: 62rpx;
  line-height: 62rpx;
}
.del-icon{
  width: 50rpx;
  height: 50rpx;
  margin:0 auto;
 
  
 
}
.submit-box{
  width: 100%;
  height: 60rpx;
  padding: 20rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
}
.submit-btn{
  width: calc(100% - 40rpx);
  height: 70rpx;
  background-color:deepskyblue ;
  text-align: center;
  line-height: 70rpx;
  border-radius: 36rpx;
  color: white;
}